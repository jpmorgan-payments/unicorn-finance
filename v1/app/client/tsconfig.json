{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "types": ["vite/client", "vite-plugin-svgr/client","vitest/globals"],
        "allowJs": true,
        "checkJs": false,
        "jsx": "react",
        "outDir": "./build",
        "rootDir": "./src",
        "noEmit": true,
        "pretty": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules", "**/cypress", "cypress.config.js", "**/build"
    ]
}